{
	"manifest_version": 2,

	"name": "Disqus Crawler",
	"description": "Crawls through and analyzes an embedded Disqus Thread",
	"version": "1.0",

	"background": {
    	"scripts": ["app.js"],
    	"persistent": false
  	},

	"browser_action": {
		//"default_popup": "popup.html"
	},

	"permissions": [
    	"activeTab",
    	"http://*/*", "https://*/*"
  	],

  	"web_accessible_resources": [
  		"Menu.html",
  		"Results.html",
  		"results.js",
  		"map.js"
  	]
